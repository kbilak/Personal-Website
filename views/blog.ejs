<% layout('_base')%>

<h1>Blog</h1>
<% for (let i=posts.length - 1; i>=0; i--) { %>
    <div class="post">
        <a href="/blog/<%=posts[i]._id%>">
            <div class="post-img">
            </div>
            <div class="post-desc">
                <h1><%=posts[i].title%></h1>
                <p><%=posts[i].short_description%></p>
                <span><%=posts[i].date%></span>
            </div>
        </a>
    </div>
<% } %>